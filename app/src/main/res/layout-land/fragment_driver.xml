<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.world_cup.DriverFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/driver_card"
        app:shapeAppearance="@style/ShapeAppearance.Material3.MediumComponent"
        app:cardBackgroundColor="?attr/colorSecondaryVariant"
        app:strokeWidth="0dp"
        app:cardElevation="3dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:textColor="?attr/colorOnSecondary"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="800"
                android:textSize="18dp"
                android:id="@+id/driver_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="650"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="350"
                android:gravity="end"
                android:id="@+id/driver_team" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="200"
                android:layout_marginEnd="10dp"
                android:gravity="center_horizontal"
                android:id="@+id/driver_wins" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="500"
                android:textSize="32dp"
                android:gravity="center_horizontal"
                android:id="@+id/driver_points" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/driver_position"
                android:layout_weight="200"
                android:gravity="end"
                android:layout_marginStart="10dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>