<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/race_screen_fragment"
    tools:context=".ui.race.RaceFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="20dp"
                app:cardBackgroundColor="?attr/colorSecondaryVariant"
                app:cardElevation="3dp"
                app:shapeAppearance="@style/ShapeAppearance.Material3.MediumComponent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="?attr/colorOnSecondary"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnSecondary"
                        android:text="@string/circuit"
                        android:textFontWeight="800"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginBottom="15dp"
                        tools:ignore="UnusedAttribute" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSecondary"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:gravity="start">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorOnSecondary"
                            android:text="@string/dummy_text"
                            android:layout_marginBottom="7dp"
                            android:textFontWeight="700"
                            android:textStyle="bold"
                            android:id="@+id/race_screen_circuit_name"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorOnSecondary"
                            android:text="@string/dummy_text"
                            android:layout_marginBottom="7dp"
                            android:id="@+id/race_screen_date" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorOnSecondary"
                            android:text="@string/dummy_text"
                            android:id="@+id/race_screen_time" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:id="@+id/race_screen_podium"
                app:cardBackgroundColor="?attr/colorSecondaryVariant"
                app:cardElevation="3dp"
                app:shapeAppearance="@style/ShapeAppearance.Material3.MediumComponent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnSecondary"
                        android:text="@string/podium"
                        android:textFontWeight="800"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginBottom="15dp"
                        tools:ignore="UnusedAttribute" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:minHeight="50dp"
                            android:layout_weight="1">

                            <TextView
                                android:textColor="?attr/colorOnSecondary"
                                android:id="@+id/race_screen_winner_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_text"
                                android:textAlignment="center"
                                android:paddingBottom="8dp"
                                android:background="@drawable/textview_border" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:minHeight="50dp"
                            android:layout_weight="1">

                            <TextView
                                android:textColor="?attr/colorOnSecondary"
                                android:id="@+id/race_screen_winner_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_text"
                                android:textAlignment="center"
                                android:paddingBottom="8dp"
                                android:background="@drawable/textview_border" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|bottom"
                            android:minHeight="50dp"
                            android:layout_weight="1">

                            <TextView
                                android:textColor="?attr/colorOnSecondary"
                                android:id="@+id/race_screen_winner_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_text"
                                android:textAlignment="center"
                                android:paddingBottom="8dp"
                                android:background="@drawable/textview_border" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:id="@+id/race_screen_results"
                app:cardBackgroundColor="?attr/colorSecondaryVariant"
                app:cardElevation="3dp"
                app:shapeAppearance="@style/ShapeAppearance.Material3.MediumComponent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:paddingBottom="0dp"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:id="@+id/expand_results_container">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/expand_results"
                            android:src="@drawable/ic_expand_more_24"
                            android:background="@android:color/transparent"
                            android:padding="5dp"
                            tools:ignore="ContentDescription"
                            app:tint="?attr/colorOnSecondary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="?attr/colorOnSecondary"
                            android:text="@string/results"
                            android:textFontWeight="800"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            tools:ignore="UnusedAttribute" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSecondary"
                        android:id="@+id/race_screen_drivers" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:id="@+id/race_screen_counter_card"
                app:cardBackgroundColor="?attr/colorSecondaryVariant"
                app:cardElevation="3dp"
                app:shapeAppearance="@style/ShapeAppearance.Material3.MediumComponent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="?attr/colorOnSecondary"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnSecondary"
                        android:text="@string/race"
                        android:textFontWeight="800"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginBottom="15dp"
                        tools:ignore="UnusedAttribute" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSecondary"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:gravity="start">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="?attr/colorOnSecondary"
                            android:text="@string/dummy_text"
                            android:id="@+id/race_screen_counter" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:id="@+id/race_screen_last_podium"
                app:cardBackgroundColor="?attr/colorSecondaryVariant"
                app:cardElevation="3dp"
                app:shapeAppearance="@style/ShapeAppearance.Material3.MediumComponent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:paddingBottom="0dp"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:id="@+id/expand_podium_container">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/expand_podium"
                            android:src="@drawable/ic_expand_more_24"
                            android:background="@android:color/transparent"
                            android:padding="5dp"
                            tools:ignore="ContentDescription"
                            app:tint="?attr/colorOnSecondary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="?attr/colorOnSecondary"
                            android:text="@string/podium_last_season"
                            android:textFontWeight="800"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            tools:ignore="UnusedAttribute" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/race_screen_last_podium_container"
                        android:baselineAligned="false">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="18dp"
                            android:textColor="?attr/colorOnSecondary"
                            android:id="@+id/race_screen_last_info" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:minHeight="50dp"
                                android:layout_weight="1">

                                <TextView
                                    android:textColor="?attr/colorOnSecondary"
                                    android:id="@+id/race_screen_last_winner_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:paddingBottom="8dp"
                                    android:background="@drawable/textview_border" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:minHeight="50dp"
                                android:layout_weight="1">

                                <TextView
                                    android:textColor="?attr/colorOnSecondary"
                                    android:id="@+id/race_screen_last_winner_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:paddingBottom="8dp"
                                    android:background="@drawable/textview_border" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center|bottom"
                                android:minHeight="50dp"
                                android:layout_weight="1">

                                <TextView
                                    android:textColor="?attr/colorOnSecondary"
                                    android:id="@+id/race_screen_last_winner_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:paddingBottom="8dp"
                                    android:background="@drawable/textview_border" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:id="@+id/race_screen_qualifying"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSecondaryVariant"
                app:cardElevation="3dp"
                app:shapeAppearance="@style/ShapeAppearance.Material3.MediumComponent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:paddingBottom="0dp"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:id="@+id/expand_qualifying_container">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/expand_qualifying"
                            android:src="@drawable/ic_expand_more_24"
                            android:background="@android:color/transparent"
                            android:padding="5dp"
                            tools:ignore="ContentDescription"
                            app:tint="?attr/colorOnSecondary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="?attr/colorOnSecondary"
                            android:text="@string/qualifying"
                            android:textFontWeight="800"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            tools:ignore="UnusedAttribute" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSecondary"
                        android:id="@+id/race_screen_qualifying_results" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>